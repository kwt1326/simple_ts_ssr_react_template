{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "es2015", "es6", "esnext", "dom"
    ],
    "baseUrl": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
		// "sourceMap": true,
    // "allowJs": true,
    // "skipLibCheck": true,
    // "strict": false,
    // "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    // "esModuleInterop": true,
    // "resolveJsonModule": true,
    // "isolatedModules": false
    "paths": {
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "server/*": ["./src/server/*"],
      "store/*": ["./src/store/*"]
    },
  },
  "include": [
    "src",
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}